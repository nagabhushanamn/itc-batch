package com.shop;

public class Matrix {

	public static void main(String[] args) {
		char[] num = { 'a', 'b', 'c', 'd', 'e', 'f', 'g' };
		for (int i = 0; i < num.length; i++) {
			for (int j = 0; j < num.length - i; j++) {
				System.out.print(num[j]);
			}

			for (int m = 1; m <= i; m++)
				if (m == 1)
					System.out.print(" ");
				else
					System.out.print("  ");
			for (int k = num.length - (1 + i); k >= 0; k--) {
				System.out.println(num[k]);
			}
			System.out.println();
		}

	}

}
